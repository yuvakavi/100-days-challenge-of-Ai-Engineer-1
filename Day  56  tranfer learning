# Install libraries (run in Colab or local)
# pip install transformers torch

from transformers import pipeline

# Load a pretrained model for sentiment analysis
sentiment_model = pipeline("sentiment-analysis")

# Give some text inputs
texts = [
    "I love this product! Itâ€™s amazing ğŸ˜",
    "This is the worst movie Iâ€™ve ever seen ğŸ˜¡",
    "The service was okay, not great but not bad."
]

# Predict
for t in texts:
    result = sentiment_model(t)[0]
    print(f"Text: {t}\nLabel: {result['label']}, Score: {result['score']:.2f}\n")
